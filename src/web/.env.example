# API Configuration
# Base URL for REST API endpoints (use HTTPS in production)
VITE_APP_API_URL=http://localhost:3000/api/v1

# WebSocket Configuration
# WebSocket URL for real-time updates (use WSS in production)
VITE_APP_WS_URL=ws://localhost:3000

# Environment Configuration
# Current environment (development/staging/production)
VITE_APP_ENV=development

# Auth0 Authentication Configuration
# Domain from Auth0 application settings
VITE_APP_AUTH_DOMAIN=your-auth0-domain.auth0.com
# Client ID from Auth0 application settings
VITE_APP_AUTH_CLIENT_ID=your-auth0-client-id
# API identifier from Auth0 APIs section
VITE_APP_AUTH_AUDIENCE=your-auth0-api-identifier

# Storage Configuration
# URL for file storage service (use HTTPS in production)
VITE_APP_STORAGE_URL=http://localhost:9000
# Maximum file upload size in bytes (default: 10MB)
VITE_APP_FILE_UPLOAD_MAX_SIZE=10485760

# Performance Configuration
# Maximum number of retries for failed API requests
VITE_APP_API_MAX_RETRIES=3
# API request timeout in milliseconds
VITE_APP_API_TIMEOUT=5000
# WebSocket reconnection attempts
VITE_APP_WS_MAX_RECONNECT=5

# Feature Flags
# Enable/disable real-time updates
VITE_APP_ENABLE_REALTIME=true
# Enable/disable debug logging
VITE_APP_ENABLE_DEBUG=false

# Rate Limiting
# Maximum requests per minute per user
VITE_APP_RATE_LIMIT_RPM=1000

# Content Security Policy
# CSP nonce for inline scripts (if required)
VITE_APP_CSP_NONCE=

# ===================================
# IMPORTANT NOTES:
# ===================================
# 1. This is an example file. Create a .env file with actual values
# 2. Never commit .env files to version control
# 3. Use HTTPS/WSS protocols in production
# 4. Rotate Auth0 credentials regularly in production
# 5. Adjust file size limits based on infrastructure capacity
# 6. Different environments should have different configurations
# 7. All variables must be prefixed with VITE_APP_ to be accessible in the app
# 8. Values shown are examples and must be replaced with actual values